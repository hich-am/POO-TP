<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="transport.control.MenuController">
    <padding>
        <Insets top="40" right="20" bottom="40" left="20"/>
    </padding>

    <Button text="Ajouter un titre" onAction="#gererTicketAjouter" prefWidth="200"/>
    <Button text="Afficher les titres vendus" onAction="#gererTicketAfficher" prefWidth="200"/>
    <Button text="Valider un titre" onAction="#gererTicketValider" prefWidth="200"/>
    <Button text="Enregistrer une réclamation" onAction="#gererReclamation" prefWidth="200"/>
    <Button text="Afficher les réclamations" onAction="#gererReclamationAfficher" prefWidth="200"/>
</VBox>
