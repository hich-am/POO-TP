<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="transport.control.ReclamationController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Text text="Nouvelle Réclamation" 
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1976D2;"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label text="Nom de l'utilisateur" style="-fx-font-weight: bold;"/>
            <TextField fx:id="champUtilisateur" 
                      promptText="Entrez votre nom"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="Type de réclamation" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixTypeReclamation" 
                      promptText="Sélectionnez le type"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Label text="Type de cible" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixTypeCible"
                      promptText="Sélectionnez le type de cible"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="0">
            <Label text="Cible" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixCible"
                      promptText="Sélectionnez la cible"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="0">
            <Label text="Description" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="champCommentaire"
                      promptText="Décrivez votre réclamation..."
                      wrapText="true"
                      style="-fx-pref-width: 300; -fx-pref-height: 100;"/>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Soumettre" 
                onAction="#gererSoumettre"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
                       -fx-font-weight: bold; -fx-min-width: 120;"/>
        
        <Button text="Retour" 
                onAction="#gererRetour"
                style="-fx-background-color: #f44336; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-min-width: 120;"/>
    </HBox>

    <Label fx:id="labelResultat" 
           style="-fx-font-weight: bold; -fx-text-fill: #1976D2;"/>
</VBox>
