<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="transport.control.TicketAjouterController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Text text="Nouveau Titre de Transport" 
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1976D2;"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label text="Prénom" style="-fx-font-weight: bold;"/>
            <TextField fx:id="champPrenom" 
                      promptText="Entrez le prénom"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="Nom" style="-fx-font-weight: bold;"/>
            <TextField fx:id="champNom" 
                      promptText="Entrez le nom"
                      style="-fx-pref-width: 300;"/>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Label text="Type d'utilisateur" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixTypeUtilisateur" 
                      promptText="Sélectionnez le type"
                      style="-fx-pref-width: 300;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Élève"/>
                        <String fx:value="Étudiant"/>
                        <String fx:value="Travailleur"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="0">
            <Label text="Type de titre" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixTypeTitre"
                      promptText="Sélectionnez le type"
                      style="-fx-pref-width: 300;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Ticket"/>
                        <String fx:value="Carte de navigation"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="0">
            <Label text="Réduction" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixReduction"
                      promptText="Sélectionnez la réduction"
                      style="-fx-pref-width: 300;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Junior"/>
                        <String fx:value="Senior"/>
                        <String fx:value="Solidarité"/>
                        <String fx:value="Partenaire"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>

        <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="0">
            <Label text="Mode de paiement" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="choixPaiement"
                      promptText="Sélectionnez le mode"
                      style="-fx-pref-width: 300;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Espèces"/>
                        <String fx:value="Dahabia"/>
                        <String fx:value="BaridiMob"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Valider" 
                onAction="#gererSoumettre"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
                       -fx-font-weight: bold; -fx-min-width: 120;"/>
        
        <Button text="Retour" 
                onAction="#gererRetour"
                style="-fx-background-color: #f44336; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-min-width: 120;"/>
    </HBox>
</VBox>
